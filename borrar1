                question: "Para actualizar datos cada 5 segundos autom√°ticamente, se usa:",
                options: [
                    "setInterval()",
                    "autoUpdate()",
                    "invalidateLater()",
                    "refreshData()"
                ],
                correct: 2
            },
            {
                category: "Reactividad",
                question: "¬øVerdadero o Falso? Una aplicaci√≥n Shiny puede publicarse en shinyapps.io de forma gratuita.",
                options: [
                    "Verdadero",
                    "Falso"
                ],
                correct: 0
            }
        ];

        let currentQuestion = 0;
        let correctAnswers = 0;
        let userAnswers = new Array(quizData.length).fill(null);
        let answered = false;

        function startQuiz() {
            document.getElementById('start-screen').style.display = 'none';
            document.getElementById('quiz-screen').style.display = 'block';
            loadQuestion();
        }

        function loadQuestion() {
            const q = quizData[currentQuestion];
            answered = false;
            
            document.getElementById('question-category').textContent = 
                `üìö ${q.category} - Pregunta ${currentQuestion + 1} de ${quizData.length}`;
            document.getElementById('question-text').textContent = q.question;
            
            const optionsContainer = document.getElementById('options');
            optionsContainer.innerHTML = '';
            
            const letters = ['A', 'B', 'C', 'D'];
            q.options.forEach((option, index) => {
                const optionDiv = document.createElement('div');
                optionDiv.className = 'option';
                if (userAnswers[currentQuestion] === index) {
                    optionDiv.classList.add('selected');
                }
                optionDiv.innerHTML = `
                    <div class="option-letter">${letters[index]}</div>
                    <div class="option-text">${option}</div>
                `;
                optionDiv.onclick = () => selectOption(index);
                optionsContainer.appendChild(optionDiv);
            });

            document.getElementById('current-question').textContent = currentQuestion + 1;
            document.getElementById('prev-btn').disabled = currentQuestion === 0;
            document.getElementById('next-btn').textContent = 
                currentQuestion === quizData.length - 1 ? 'Ver Resultados üéØ' : 'Siguiente ‚Üí';
            
            updateProgress();
            document.getElementById('feedback').style.display = 'none';
        }

        function selectOption(index) {
            if (answered) return;
            
            userAnswers[currentQuestion] = index;
            answered = true;
            
            const q = quizData[currentQuestion];
            const options = document.querySelectorAll('.option');
            const feedback = document.getElementById('feedback');
            
            options[index].classList.add('selected');
            
            setTimeout(() => {
                if (index === q.correct) {
                    options[index].classList.add('correct');
                    feedback.className = 'feedback correct';
                    feedback.innerHTML = '‚úÖ ¬°Correcto! Excelente respuesta.';
                    correctAnswers++;
                } else {
                    options[index].classList.add('incorrect');
                    options[q.correct].classList.add('correct');
                    feedback.className = 'feedback incorrect';
                    feedback.innerHTML = `‚ùå Incorrecto. La respuesta correcta es: <strong>${q.options[q.correct]}</strong>`;
                }
                
                feedback.style.display = 'block';
                document.getElementById('next-btn').disabled = false;
                updateStats();
            }, 300);
        }

        function nextQuestion() {
            if (currentQuestion < quizData.length - 1) {
                currentQuestion++;
                loadQuestion();
                document.getElementById('next-btn').disabled = true;
            } else {
                showResults();
            }
        }

        function previousQuestion() {
            if (currentQuestion > 0) {
                currentQuestion--;
                loadQuestion();
            }
        }

        function updateProgress() {
            const progress = ((currentQuestion + 1) / quizData.length) * 100;
            document.getElementById('progress').style.width = progress + '%';
        }

        function updateStats() {
            document.getElementById('correct-count').textContent = correctAnswers;
            const score = Math.round((correctAnswers / quizData.length) * 100);
            document.getElementById('score').textContent = score + '%';
        }

        function showResults() {
            document.getElementById('quiz-screen').style.display = 'none';
            document.getElementById('results-screen').style.display = 'block';
            
            const percentage = Math.round((correctAnswers / quizData.length) * 100);
            const incorrect = quizData.length - correctAnswers;
            
            document.getElementById('final-score').textContent = percentage + '%';
            document.getElementById('total-correct').textContent = correctAnswers;
            document.getElementById('total-incorrect').textContent = incorrect;
            document.getElementById('final-percentage').textContent = percentage + '%';
            
            let emoji, message, badge, badgeClass;
            
            if (percentage >= 92) {
                emoji = 'üèÜ';
                message = '¬°Excelente! Dominaste el tema';
                badge = 'üèÜ Excelente';
                badgeClass = 'badge-excellent';
                createConfetti();
            } else if (percentage >= 80) {
                emoji = 'üåü';
                message = '¬°Muy Bien! Gran desempe√±o';
                badge = '‚≠ê Muy Bien';
                badgeClass = 'badge-good';
            } else if (percentage >= 70) {
                emoji = '‚úÖ';
                message = '¬°Aprobado! Buen trabajo';
                badge = '‚úÖ Aprobado';
                badgeClass = 'badge-pass';
            } else {
                emoji = 'üìö';
                message = 'Necesitas repasar el material';
                badge = 'üìö Necesita Mejorar';
                badgeClass = 'badge-fail';
            }
            
            document.getElementById('results-emoji').textContent = emoji;
            document.getElementById('results-message').textContent = message;
            document.getElementById('grade-badge').innerHTML = 
                `<span class="badge ${badgeClass}">${badge}</span>`;
        }

        function createConfetti() {
            for (let i = 0; i < 50; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.style.left = Math.random() * 100 + '%';
                    confetti.style.background = ['#447099', '#6ba8d4', '#75aadb', '#88bbeb'][Math.floor(Math.random() * 4)];
                    confetti.style.animationDelay = Math.random() * 2 + 's';
                    document.body.appendChild(confetti);
                    setTimeout(() => confetti.remove(), 3000);
                }, i * 30);
            }
        }

        function restartQuiz() {
            currentQuestion = 0;
            correctAnswers = 0;
            userAnswers = new Array(quizData.length).fill(null);
            answered = false;
            document.getElementById('results-screen').style.display = 'none';
            document.getElementById('start-screen').style.display = 'block';
        }
    </script>
</body>
</html>
